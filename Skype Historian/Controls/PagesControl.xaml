<UserControl x:Class="SkypeHistorian.Controls.PagesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <DockPanel>
            <Label FontSize="15"
                   Margin="0,0,0,8" DockPanel.Dock="Top"
                   x:Name="titleLabel" x:FieldModifier="private">
                Placeholder for a title
                <Label.Foreground>
                    <SolidColorBrush x:Name="titleBrush"
                                     x:FieldModifier="private"
                                     Color="#003399"/>
                </Label.Foreground>
            </Label>
            <Grid x:Name="contentGrid" x:FieldModifier="private">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label>
                    Placeholder for a page.
                </Label>
            </Grid>
        </DockPanel>
    </Grid>
</UserControl>
